<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:background="@color/white"
    android:layout_marginTop="6dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImage_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/photo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="达西总监"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="left"
            android:maxLines="4"
            android:text="嗯"
            android:textSize="14sp" />


        <com.pet.view.NineGridTestLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"

            app:sapcing="4dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/time"
                android:drawablePadding="4dp"
                android:text="昨天 9:49" />

            <LinearLayout
                android:layout_marginEnd="20dp"
                android:layout_toLeftOf="@+id/ll_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@mipmap/point" />

                <TextView
                    android:layout_marginStart="2dp"
                    android:textSize="14sp"
                    android:id="@+id/tv_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_answer"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@mipmap/answer" />

                <TextView
                    android:textSize="14sp"
                    android:layout_marginStart="2dp"
                    android:id="@+id/tv_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20" />
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:background="@color/gray_answer"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/blue"
                android:layout_marginStart="2dp"
                android:id="@+id/tv_answer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务器研发总监: " />

            <TextView
                android:singleLine="true"
                android:textColor="@color/black"
                android:layout_marginStart="2dp"
                android:id="@+id/tv_answer_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科学的甜美气息" />

        </LinearLayout>
        <TextView
            android:gravity="center|left"
            android:background="@color/gray_answer"
            android:textColor="@color/blue"
            android:text="共100条回复 >"
            android:layout_width="match_parent"
            android:layout_height="30dp" />


    </LinearLayout>


</LinearLayout>



