<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_answer_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/default_head" />

    <LinearLayout
        android:layout_marginStart="4dp"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_answer_name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="达西:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_content"
                android:text="少年英雄九四小哪吒,我只是个送外卖的。有句话不知当讲不当讲"
                android:layout_marginStart="4dp"
                android:layout_toRightOf="@+id/tv_answer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <TextView
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:text="2018-6-25v17:53"
            android:id="@+id/tv_answer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/hand" />

        <TextView
            android:layout_marginStart="4dp"
            android:text="3"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
