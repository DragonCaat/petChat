<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_">


    <LinearLayout
        android:background="@color/gray_"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="打赏"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reward_first"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rectangle_reward_white"
            android:drawableTop="@mipmap/pet_food"
            android:gravity="center"
            android:paddingTop="2dp"
            android:text="10克" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_reward_second"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rectangle_reward_gray"
            android:drawableTop="@mipmap/pet_food"
            android:gravity="center"
            android:paddingTop="2dp"
            android:text="50克" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_reward_third"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rectangle_reward_gray"
            android:drawableTop="@mipmap/pet_food"
            android:gravity="center"
            android:paddingTop="2dp"
            android:text="100克" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:text="自定义宠粮"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <EditText
            android:id="@+id/et_user_reward"
            android:layout_marginEnd="10dp"
            android:hint="0"
            android:paddingStart="2dp"
            android:inputType="number"
            android:background="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_width="120dp"
            android:layout_height="match_parent" />
    </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_marginStart="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_pet_food"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:textColor="@color/main_color_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <Button
            android:id="@+id/btn_sure"
            android:textColor="@color/white"
            android:text="打赏"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_selector"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_width="120dp"
            android:layout_height="match_parent" />
    </RelativeLayout>

</RelativeLayout>
