<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pet">

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 地图所需要的权限 -->
    <!-- 用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 获取运营商信息，用于支持提供运营商信息相关的接口 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 用于访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 用于读取手机当前的状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 写入扩展存储，向扩展卡写入数据，用于写入缓存定位数据 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 用于申请调用A-GPS模块 -->
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />

    <!-- &lt;!&ndash;用于申请获取蓝牙信息进行室内定位&ndash;&gt; -->
    <!-- <uses-permission android:name="android.permission.BLUETOOTH"/> -->
    <!-- <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/> -->
    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="RONG_CLOUD_APP_KEY"
            android:value="YvRJPiZA4vNu" />

        <!-- 主页面 -->
        <activity android:name=".activity.MainActivity" />
        <!-- 高德地图配置 -->
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="8d0d546963b8267fb07b2676355b3893" />
        <!-- 定位需要的服务 -->
        <service android:name="com.amap.api.location.APSService" />

        <activity android:name=".activity.BaseActivity" />

        <!-- 欢迎界面 -->
        <activity
            android:name=".activity.WelcomeActivity"
            android:theme="@style/AppTheme.white">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 登陆主界面 -->
        <activity android:name=".activity.LoginActivity" />
        <!-- 注册界面 -->
        <activity android:name=".activity.RegisterActivity" />

        <!-- 随手拍详情界面 -->
        <activity
            android:name=".activity.TakePhotoDetailActivity"
            android:theme="@style/AppTheme.transparent" />

        <!-- 设置页面 -->
        <activity android:name=".activity.SetActivity" />

        <!-- 融云所需要的提供者 -->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.pet.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/rc_file_path" />
        </provider>

        <!-- 个人测试界面，上线后需要删除 -->
        <activity
            android:name=".activity.PlayActivity"
            android:theme="@style/AppTheme.transparent" />

        <!-- 聊天界面 -->
        <activity
            android:name=".activity.ChatActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="com.pet"
                    android:pathPrefix="/conversation/"
                    android:scheme="rong" />
            </intent-filter>
        </activity>

        <!-- 图片选择几面 -->
        <activity android:name="com.zfdang.multiple_images_selector.ImagesSelectorActivity" />

        <!-- 忘记密码界面 -->
        <activity android:name=".activity.ForgetPassActivity" />
        <!-- 图片查看器 -->
        <activity android:name=".activity.ImagePagerActivity" />
        <!-- 完善用户信息的页面 -->
        <activity android:name=".activity.CompileUserDataActivity" />

        <!-- 发布动态界面 -->
        <activity
            android:name=".activity.PublishActivity"
            android:windowSoftInputMode="adjustPan" />

        <!-- 获取定位信息的界面 -->
        <activity android:name=".activity.GetLocationActivity" />

        <!-- 话题界面 -->
        <activity
            android:name=".activity.TopicDetailActivity"
            android:theme="@style/AppTheme.all"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <!-- 展示其他用户信息 -->
        <activity
            android:name=".activity.ShowUserActivity"
            android:theme="@style/AppTheme.white" />

        <!-- 寄养申请页面 -->
        <activity android:name=".activity.FillFosterActivity" />
        <!-- 附近的人页面 -->
        <activity android:name=".activity.NearPeopleActivity" />
        <!-- 添加宠物页面 -->
        <activity android:name=".activity.AddPetActivity" />
        <!-- 选择宠物种类页面 -->
        <activity android:name=".activity.PetSelectActivity" />
        <!-- 宠物管理界面 -->
        <activity android:name=".activity.PetManageActivity" />
        <!-- 关于我们界面 -->
        <activity android:name=".activity.AboutOurActivity" />
        <!--意见反馈界面-->
        <activity android:name=".activity.SuggestActivity"
            android:windowSoftInputMode="adjustPan|stateHidden"
            />
    </application>

</manifest>